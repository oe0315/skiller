<%= render 'layouts/user_header' %>
<div class="container">
  <div class="row">
    <div class="offset-3 col-6">
      <div class="text-center mb-4">
        <img class="mb-4" src="/assets/skiller2.png" alt="" width="150" height="70">
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="row">
        <div class="field col">
          <%= f.text_field :last_name, class:"form-control", placeholder:"名字", required: true %>
        </div>
        <div class="field col">
          <%= f.text_field :first_name, class:"form-control", placeholder:"名前", required: true %>
        </div>
      </div>

      <div class="field">
        <%= f.text_field :nickname, class:"form-control", placeholder:"ニックネーム", style: "margin-top: 30px;", required: true %>
      </div>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"メールアドレス", style: "margin-top: 30px;", required: true %>
      </div>

      <div class="field">
        <%= f.text_field :phone_number, class:"form-control", placeholder:"電話番号", style: "margin-top: 30px;", required: true %>
      </div>

      <div class="field">
        <%= f.text_field :skill, class:"form-control", placeholder:"スキル", style: "margin-top: 30px;", required: true%>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"パスワード(6文字以上)", style: "margin-top: 30px;", required: true %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"パスワード(確認)", style: "margin-top: 30px;", required: true %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-success btn-block", style: "margin-top: 30px;" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
